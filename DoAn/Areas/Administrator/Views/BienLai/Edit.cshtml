<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/table.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/video.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.3.0/codemirror.min.css">



<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "BienLai")
</div>
@using (Html.BeginForm("Edit", "BienLai", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.maBienBan)
                    <div class="text-success">
                        @ViewBag.EditProError
                    </div>
                    <div class="form-group col-lg-5">
                        <label>Mã biên bản</label>
                        @Html.DropDownListFor(model => model.maBienBan, ViewBag.nvpListCreate as SelectList, new { @class = "form-control" })
                        <label>Tình trạng nộp phạt</label>
                        @Html.EditorFor(model => model.tinhTrangNopPhat, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tình trạng nộp phạt..." } })
                        <div class="text-danger">@Html.ValidationMessageFor(model => model.tinhTrangNopPhat)</div>
                        <label>Ngày xuấy</label>
                        @Html.TextBoxFor(model => model.ngayXuat, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
                        <br />
                        <input type="submit" value="Xác nhận" class="btn btn-default" />
                    </div>
                </div>}



