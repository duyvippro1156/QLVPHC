@model ModelEF.Model.NguoiViPham

@{
    ViewBag.Title = "Cập nhật Người Vi Phạm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật Người Vi Phạm</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "NguoiViPham")
</div>
@using (Html.BeginForm("Edit", "NguoiViPham", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.soCMND)
        <div class="text-success">
            @ViewBag.EditTypeError
        </div>
        <div class="form-group col-lg-5">
        
            <label>Họ tên</label>
            @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập họ tên..." } })

            <label>Giới tính</label>
            @Html.DropDownListFor(model => model.gioiTinh,new List<SelectListItem>{new SelectListItem{ Text="Nam", Value="true"},
                                                           new SelectListItem{ Text="Nữ", Value="false"}}, "--- Giới tính ---", new { @class = "form-control"} )

            <label>Ngày sinh</label>
            @Html.TextBoxFor(model => model.ngaySinh, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })

            <label>Số điện thoại</label>
            @Html.EditorFor(model => model.soDienThoai, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số điện thoại..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.soDienThoai)</div>

            <label>Địa chỉ</label>
            @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập địa chỉ..." } })

            <label>Quốc Tịch</label>
            @Html.EditorFor(model => model.quocTich, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập quốc tịch..." } })
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>