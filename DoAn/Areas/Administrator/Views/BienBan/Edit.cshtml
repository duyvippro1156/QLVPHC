@model ModelEF.Model.ThongTinBienBan
@{
    ViewBag.Title = "Cập nhật biên bản";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật sản phẩm</h2>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/froala_editor.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/froala_style.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/code_view.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/image_manager.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/image.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/table.css">
<link rel="stylesheet" href="~/Areas/Administrator/css/plugins/video.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.3.0/codemirror.min.css">



<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "BienBan")
</div>
@using (Html.BeginForm("Edit", "BienBan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.maBienBan)
    <div class="text-success">
        @ViewBag.EditProError
    </div>
    <div class="form-group col-lg-5">
        <label>Người vi phạm</label>
        @Html.DropDownListFor(model => model.soCMND, ViewBag.nvpListCreate as SelectList, new { @class = "form-control" })
        <label>Biển số xe</label>
        @Html.EditorFor(model => model.bienSoXe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập biển số xe" } })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.bienSoXe)</div>
        <label>Giấy phép lái xe</label>
        @Html.EditorFor(model => model.giayPhepLaiXe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập giấy phép lái xe" } })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.giayPhepLaiXe)</div>
        <label>Lỗi vi phạm</label>
        @Html.DropDownListFor(model => model.maLoiViPham, ViewBag.typeListCreate as SelectList, new { @class = "form-control" })
        <label>Địa điểm vi phạm</label>
        @Html.EditorFor(model => model.diaDiemViPham, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.diaDiemViPham)</div>

        <label>Ngày vi phạm</label>
        @Html.EditorFor(model => model.ngayViPham, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập ngày vi phạm" } })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.ngayViPham)</div>
        <label>Thanh tra</label>
        @Html.DropDownListFor(model => model.maThanhTra, ViewBag.pdcListCreate as SelectList, new { @class = "form-control" })
        <label>Tang vật tạm giữ</label>
        @Html.EditorFor(model => model.tangVatTamGiu, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tang vật tạm giữ" } })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.tangVatTamGiu)</div>

        <br />
        <input type="submit" value="Cập nhật" class="btn btn-default" />
    </div>
</div>
}



